  <body>
<!-- Nav Bar --------------------->
<header>

  <nav class="navbar navbar-expand-md navbar-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Life</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item active">
            <a class="nav-link" aria-current="page" href="/products">Home</a>
          </li>
            <% if(currentUser){ %>
              <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                <form class="logOut"action="/sessions?_method=DELETE" method="post">
                  <input class="logOut" type="submit" name="" value="Log Out">
                </form>
              </div>
            <%}else{%>
              <li class="nav-item">
                <a class="nav-link" href="/users/new">SignUp</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/sessions/new">LogIn</a>
              </li>
            <%}%>
        </ul>
        <form class="d-flex">
          <% if(currentUser){%>
          <input class="form-control me-2" type="search" placeholder="Welcome <%= currentUser.username%>" aria-label="Search">
          <%}else{%>
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <%}%>
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
</header>
  <!-- Marketing messaging and featurettes
  ================================================== -->
  <!-- Wrap the rest of the page in another container to center all the content. -->
  <div class="container marketing">
    <!-- Three columns of text below the carousel -->
    <div class="flip-container">
        <div class="flip-box">
          <div class="flip-box-inner">
            <div class="flip-box-front">
              <img src="<%=tableTopia.img%>" width="100%" height="100%">
            </div>
            <div class="flip-box-back" id="tabletopia">
              <a href="/tableTopia/"><img src="<%=tableTopia.img%>" width="100%" height="100%"></a>
            </div>
          </div>
        </div>
      </div>
      <!-- carousel container ----------------------->
      <main>
        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
          <ol class="carousel-indicators">
            <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="container">
                <div class="carousel-caption text-start">

                  <div class="carousel-div-image">
                    <img class="carousel-image" src="<%=tableTopia.img1%>">
                  </div>
                </div>
              </div>
            </div>
            <div class="carousel-item">
              <div class="container">
                <div class="carousel-caption">
                  <h2></h2>
                  <div class="carousel-div-image">
                    <img class="carousel-image" src="<%=tableTopia.img2%>">
                  </div>
                </div>
              </div>
            </div>

            <div class="carousel-item">
              <div class="container">
                <div class="carousel-caption">
                  <h2></h2>
                  <div class="carousel-div-image">
                    <img class="carousel-image" src="<%=tableTopia.img3%>">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </a>
          <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </a>
        </div>
    </div>


    <!-- purchase half -->

      <div class="edit-sidebar"></div>
      <div class="edit-page">
      <form action="/tableTopia/<%=tableTopia._id%>?_method=PUT" form="post">
      <fieldset class="show-page">
        <h1><%=tableTopia.name%></h1></br>
        <h2><%=tableTopia.players%> players</h2></br>
        <h3>-Purchase Price-</h3>
        <h2>$ <%=tableTopia.price%></h2></br>
        <h3>-Quantity-</h3>
        <h2><%=tableTopia.qty%> in stock</h2>
      </fieldset>
      </form>
      <% if(tableTopia.qty <= 0){ %>
        <h5>OUT OF STOCK</h5>
      <% } else{ %>

        <form action="/tableTopia/buy/<%=tableTopia._id%>?_method=PUT" method="POST">
          <input class="btn btn-sm btn-outline-secondary"type="submit" value="Purchase">

        </form>
      <%} %>

      <fieldset class="edit-info">
        <label for="description">Description</label>
        <textarea id="description"type="text" name="description"><%=tableTopia.description%></textarea>
      </fieldset>
      </div>

  </body>

  </div>



  <footer class="container">
    <p class="float-end"><a href="#">Back to top</a></p>
    <p>&copy; 2020 Life, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
  </footer>
</main>


